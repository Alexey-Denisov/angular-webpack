    "@angular/platform-browser-dynamic": "4.4.4",
    "@angular/router": "4.4.4",
    "core-js": "2.5.5",
    "reflect-metadata": "0.1.12",
    "rxjs": "5.5.10",
    "zone.js": "0.8.26"
  },
